@page
@model  RemoveModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


<div class="text-center">
    <h1>Удалить</h1>
</div>

<div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">

    <div class="carousel-inner">
        @{
            var isFirst = true;
            foreach (var line in Model.Languages)
            {
                int i = 0;
                <div class="carousel-item @(isFirst?"active":"")" data-bs-interval="10000">
                    <img src="/img/background.png" class="d-block w-100">
                    <div class="carousel-caption d-none d-md-block" style="color:black">
                        <h5>@i</h5>
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Name: @line.Name
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                type: @line.type
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                reiting @line.reiting
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <form action="/Remove" method="post">
                                    <input hidden type="text" class="form-control" id="nameRemove" name="nameRemove" value="@line.toString()" />
                                    <button type="submit" class="btn btn-primary">Удалить</button>
                                </form>
                            </li>
                        </ul>
                    </div>

                </div>
                isFirst = false;
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>
